  <h1>Admin Dashboard â€“ Manage Listings</h1>

  <% items.forEach(item => { %>
    <div class="item <%= item.status === 'pending' ? 'pending' : '' %>">
      <h2><%= item.title %></h2>
      <p><%= item.description %></p>
      <p>Status: <strong><%= item.status %></strong></p>

      <% if (item.status === 'pending') { %>
        <form method="POST" action="/admin/items/<%= item.id %>/approve">
          <button type="submit">Approve</button>
        </form>
        <form method="POST" action="/admin/items/<%= item.id %>/reject">
          <button type="submit" class="reject">Reject</button>
        </form>
      <% } %>

      <form method="POST" action="/admin/items/<%= item.id %>/delete">
        <button type="submit" class="delete" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
      </form>
    </div>
  <% }) %>
